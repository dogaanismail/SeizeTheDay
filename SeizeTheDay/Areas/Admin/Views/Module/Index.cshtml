
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" ng-controller="ModuleCtrl">
 
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Module
        </h1>
        <div class="text-right">
            <a href="/Admin/Dashboard/Index"><i class="fa fa-dashboard"></i> Home</a> >
            <a href="/Admin/User/Index"> Module List</a> 
            <span>{{UserState}}</span>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div ng-show="flgMessage" id="message" class="alert alert-dismissible">
                    <button type="button" class="close" ng-click="hideMessage()" aria-hidden="true">&times;</button>
                    <h4><i id="icon" class="icon fa "></i> Alert!</h4>
                    {{message}}
                </div>

                <!-- general form elements -->
                <div class="box box-primary" ng-show="flgTable">
                    <div class="box-header with-border">
                        <h3 class="box-title">Module List</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-header">
                        <button type="button" ng-click="addModule()" class="btn btn-primary"><i class="fa fa-plus"></i> Add Module</button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="">
                            <table id="moduleTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <td>Module Name</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in lstModule">
                                        <td>{{item.ModuleName}}</td>
                                        <td>
                                            <a href="#" class="btn btn-primary btn-circle" ng-click="editModule(item)" title="" data-toggle="tooltip" data-placement="top" data-original-title="Edit Module">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                            <a href="#" class="btn btn-danger btn-circle" ng-click="deleteModule(item)" title="" data-toggle="tooltip" data-placement="top" data-original-title="Delete Module">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- /.box -->

                </div>
                
                <div class="box box-primary" ng-show="!flgTable">
                    <div class="box-header with-border">
                        <h3 class="box-title">Module Add/Update</h3>
                    </div>

                    <form role="form" id="form1" name="form1" novalidate ng-submit="formSubmit()">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Parent Page</label>
                                        <select class="form-control" name="ParentModuleId" ng-model="model.ParentModuleID">
                                            <option value="0">Select Module</option>
                                            <option ng-selected="model.ParentModuleID==item.ParentModuleID" ng-repeat="item in lstModuleDropdown" value="{{item.ModuleID}}">{{item.ModuleName}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="Display Order">Display Order</label>
                                        <input type="number" ng-model="model.DisplayOrder" required class="form-control" id="DisplayOrder" placeholder="Display Order">
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" required ng-model="model.ModuleName" id="ModuleName" placeholder="ModuleName">
                                    </div>
                                    <div class="form-group">
                                        <label for="PageIcon">Page Icon</label> (fa-dashboard) <a href="https://fortawesome.github.io/Font-Awesome/icons/" target="_blank">Icon List</a>
                                        <input type="text" class="form-control" required ng-model="model.PageIcon" id="PageIcon" placeholder="PageIcon">
                                    </div>

                                    <div class="form-group">
                                        <label for="Page Url">Page Url</label>(/Sample)
                                        <input type="text" class="form-control" required ng-model="model.PageUrl" id="PageUrl" placeholder="Page Url">
                                    </div>
                                </div>
                            </div>
                          


                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" ng-disabled="!form1.$valid" ng-click="createModule(model)" class="btn btn-primary">Submit</button>
                            <button type="button" ng-click="reset()" class="btn btn-default">Cancel</button>
                        </div>
                    </form>
                    <!-- /.box -->

                </div>
            </div>

        </div>

    </section>
    <!-- /.content -->
</div>

